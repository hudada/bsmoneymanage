<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_01"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/the_space"
        android:text="收支种类"
        android:textColor="@color/text_6"
        android:textSize="@dimen/text_size02" />
    <TextView
        android:id="@+id/tv_02"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/the_space"
        android:text="+0.00元"
        android:textStyle="bold"
        android:textColor="@color/text_9"
        android:textSize="@dimen/text_size02" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_03"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/the_space"
            android:text="消费地点：WOWO"
            android:textColor="@color/text_12"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_04"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/the_space"
            android:text="账户：支付宝"
            android:textColor="@color/text_12"
            android:textSize="12sp" />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/the_space"
        android:text="消费时间：2018-2-2 12:12:12"
        android:textColor="@color/text_12"
        android:textSize="12sp"
        android:layout_marginBottom="@dimen/the_space"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_9" />
</LinearLayout>
